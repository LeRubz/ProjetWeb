{% extends 'layout.html.twig' %}

{% block title %}Wishlist{% endblock %}

{% block content %}
    <main class="wishlist-page">
        <h1>Mes offres enregistrées</h1>

        <div class="wishlist-container">
            <!-- 🔁 Début boucle PHP sur les offres de la wishlist -->
            <div class="wishlist-card">
                <form method="POST" action="src/Controller/wishlistController.php" class="remove-form">
                    <input type="hidden" name="id_offer" value="1">
                    <input type="hidden" name="action" value="remove">
                    <button class="remove-btn" title="Supprimer">✖</button>
                </form>

                <div class="wishlist-info">
                    <!-- Texte de l'offre -->
                    <div class="wishlist-text">
                        <h3>Titre de l’offre de stage</h3>
                        <p><strong>Description stage :</strong><br>
                        dpzhfizehfzjebfzobfzpibfeifbzpifbzifbz</p>
                    </div>
                
                    <!-- Logo aligné à droite -->
                    <div class="wishlist-logo">
                        <img src="images/superU.png" alt="Logo entreprise">
                    </div>
                </div>
                
            </div>
            <!-- 🔁 Fin boucle PHP -->
        </div>
    </main>

    {% endblock %}